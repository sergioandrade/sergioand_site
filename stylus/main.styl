*
	margin: 0
html
	box-sizing: border-box;
	display: table
	height 100%
	line-height: normal

body
	height 100%
	padding: 2vh 10vw
	margin: 0
	color: #282828
	font-family: Arial
	vertical-align: middle
	display: table-cell
	background: #f0f0f0
	line-height: 1
	transition: background-color 2s linear
	
a
	color: inherit

*, *:after,*:before
	box-sizing: inherit;

h1
	float: left
	font-size: 52px
	padding: 20px 0 4px 0
	letter-spacing: -1px
h2
	display: block
	float: left
	clear: both
	font-size: 32px
	padding: 0
	
.mailto
	color: inherit
	float: left
	clear: both	
	padding: 20px 0
	font-size: 10px
nav
	position: absolute
	right: 2vw
	bottom: 2vh
	@media screen and (max-width: 600px)
		position: relative
		right: auto
		bottom: auto
		float: left
		width: 100%
	a
		float: right
		text-align: center
		margin-right: 10px
		border-radius: 50%
		width: 40px
		height: 40px
		transition: all 0.2s linear
		&:hover
			background: #000
			transform: scale(0.9)
			svg
				transform: scale(1.4)
				path
					fill: #fff
		svg
			width: 40px
			height: 40px
			padding: 10px
			transition: all 0.1s linear

article
	float: left
	width: 100%
	padding: 20px 0
p
	color: inherit
	line-height: 1.4
	
.projects
	position: fixed
	top: 0
	right: 0
	height: 100%
	width: 100%;
	background: #262721
	text-align: center
	overflow-y: auto
	overflow-x: hidden
	opacity: 0
	transform: translateY(-100%)
	&.show{
		opacity: 1
		transform: translateY(0)
	}
	ul
		display: block
		float: left
		list-style: none
		padding: 40px
		li
			padding: 10px
			float: left
			clear: both
			a
				display: block
				float: left
				padding: 6px
				color: #f82771
				font-family: Courier, monospace
				text-decoration none
				font-size: 12px
				&:hover
					color: #66d9ef;
				
				